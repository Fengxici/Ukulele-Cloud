<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="timing.ukulele.service.system.mapper.RoleMapper">

    <resultMap id="roleMap" type="timing.ukulele.api.model.system.RoleModel">
        <id column="ID_" property="id" jdbcType="BIGINT" />
        <result column="ROLE_CODE" property="roleCode" jdbcType="VARCHAR" />
        <result column="ROLE_NAME" property="roleName" jdbcType="VARCHAR" />
        <result column="ENABLE_" property="enable" jdbcType="BIGINT"/>
        <result column="CREATE_BY" property="createBy" jdbcType="BIGINT"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="UPDATE_BY" property="updateBy" jdbcType="BIGINT"/>
        <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP"/>
        <collection  column="{ID_=ID_,USER_ID=USER_ID}" property="modules"
                     select="timing.ukulele.service.system.mapper.ModuleMapper.selectModuleByRoleId" />
    </resultMap>

    <select id="getRoleByUserId" resultMap="roleMap">
    SELECT br.*, bur.USER_ID as USER_ID FROM
    user_role bur LEFT JOIN role_ br ON bur.ROLE_ID = br.ID_
    WHERE bur.USER_ID = #{userId}
  </select>

</mapper>