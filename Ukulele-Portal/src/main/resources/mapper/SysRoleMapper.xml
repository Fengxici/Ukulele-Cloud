<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="timing.ukulele.service.portal.mapper.SysRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="timing.ukulele.facade.portal.model.persistent.SysRole">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_desc" property="roleDesc"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="enable_" property="enable"/>
    </resultMap>

    <!--roleDto-->
    <resultMap id="RoleDtoMap" type="timing.ukulele.facade.portal.model.data.RoleDTO">
        <id column="id_" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_desc" property="roleDesc"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="enable_" property="enable"/>
        <result column="dept_id" property="roleDeptId"/>
        <result column="name" property="deptName"/>
    </resultMap>

    <select id="selectRolePage" resultMap="RoleDtoMap">
        SELECT
        *
        FROM
        sys_role r
        LEFT JOIN sys_role_dept rd ON rd.role_id = r.id_
        LEFT JOIN sys_dept d ON rd.dept_id = d.id_
        WHERE r.enable_ = 1
        <if test="roleName != null and roleName != ''">
            and instr(r.role_name, #{roleName}) > 0
        </if>
        ORDER BY r.id_ ASC
    </select>
    <select id="selectListByDeptId" resultMap="BaseResultMap">
		SELECT
			r.id_,
			r.role_name,
			r.role_code,
			r.role_desc,
			r.create_time,
			r.update_time,
			r.enable_
		FROM sys_role r LEFT OUTER JOIN sys_role_dept rd ON rd.role_id = r.id_
		WHERE rd.dept_id = #{deptId}
	</select>

    <select id="getRoleByUserId" resultMap="BaseResultMap">
        select r.* from sys_role r left join sys_user_role ur on r.id_=ur.role_id where r.enable_=1 and ur.user_id=#{userId};
    </select>

    <delete id="deleteUserRole">
        delete from sys_user_role where user_id=#{user_id}
        <if test="roleId!=null">
            and role_id=#{roleId}
        </if>
    </delete>

    <insert id="addUserRole">
        insert into sys_user_role(user_id,role_id) values(#{userId},#{role_id})
    </insert>
</mapper>
